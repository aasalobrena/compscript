html
  head
    title Nats Helper
    style
      include schedule.css
    link(rel='stylesheet', href='/cubing-icons.css')
  body
    h1= comp.competition.name + ' Schedule'
    form(action='/' + comp.competition.id + '/schedule')
      each day in comp.sortedSchedule
        h3= day.day.toLocaleString(fn.DateTime.DATE_HUGE)
        table
          tr
            th Event
            th Start
            th End
            th Competitors
            th Groups
            each roomId in Object.keys(comp.rooms)
              th= comp.rooms[roomId].name
          each activityList in day.activities
            tr
              - var activityCode = activityList.activityCode
              if activityCode.isActivity()
                td
                  span(class='cubing-icon event-' + activityCode.eventId)
                  = activityCode.toStringShort()
                td
                  input(type='time' name=activityCode.id() + '.start' value=activityList.startTime.toLocaleString(fn.DateTime.TIME_24_SIMPLE))
                td
                  input(type='time' name=activityCode.id() + '.end' value=activityList.endTime.toLocaleString(fn.DateTime.TIME_24_SIMPLE))
                td
                  = comp.peoplePerRound[activityCode.attempt(null).id()]
                td
                  input(type='number' name=activityCode.id() + '.groups' value=activityList.numGroups style="width: 4em")
                each roomId in Object.keys(comp.rooms)
                  - var activity = activityList.activities.get(+roomId)
                  - var activityExtension = activity ? fn.getExtension(activity, 'Activity') : null
                  td
                    input(type='checkbox' name=activityCode.id() + '.' + roomId + '-active', checked=activityList.activities.has(+roomId))
                    input(name=activityCode.id() + '.' + roomId + '-adjustment', style="width: 4em", value=activityExtension ? activityExtension.adjustment : '')
              else 
                td(colspan=(Object.keys(comp.rooms).length + 5), class='nonevent')= activityCode.toString()
      br
      input(type='submit')
